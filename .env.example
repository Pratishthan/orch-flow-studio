# Concierge Configuration
# Copy this file to .env and fill in your actual values

# Dynagent LLM settings (GOOGLE_API_KEY / ANTHROPIC_API_KEY used by shared-lib)
LLM_PROVIDER=gemini
GOOGLE_API_KEY="AI-my-key"
LLM_MODEL=gemini-2.0-flash
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY="sk-ant-api-my-key"
# LLM_MODEL=claude-sonnet-4-20250514


# Agent Configuration
# Path to agent configs (relative to project root)
DYNAGENT_CONFIG_ROOT_DIR=agent_configs/concierge

# Langfuse Observability (Optional)
# Leave empty to disable tracing
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY="pk-lf-public-key"
LANGFUSE_SECRET_KEY="sk-lf-secret-key"
LANGFUSE_HOST=http://localhost:3000

# GitHub OAuth for Chainlit (Optional)
# Leave empty to disable authentication
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
CHAINLIT_AUTH_SECRET=

# Application Settings
PORT=2337
DEBUG=false


# Docker Data Volumes - this is to ensure - we don't lose Langfuse / PG data when we restart the container.
DOCKER_DATA_DIR=/workspace/data

# File Server Settings
FILE_SERVER_PORT=9002
FILE_SERVER_ROOT=/path/to/your/data
