{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "jarvis/joke-output.json",
  "title": "Joke Output",
  "type": "object",
  "required": ["joke_text", "category"],
  "properties": {
    "joke_text": {
      "type": "string",
      "description": "The text of the joke"
    },
    "category": {
      "type": "string",
      "enum": ["programming", "general", "knock-knock", "dad-joke"],
      "description": "The category of the joke"
    },
    "rating": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Humor rating from 1 to 5"
    }
  }
}
